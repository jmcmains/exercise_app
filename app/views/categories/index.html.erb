<div class="sidebar">
	<h1> CATEGORY </h1>
	<h2 class="sbbutton" id="All">All</h2>
		<%= render Category.all %>
	<h1> WORKOUT </h1>
		<%= render Workout.all %>
	<h1> EXTRA INFORMATION </h1>
	<h2 class="sbbutton" id="Glossary">Glossary</h2>
	<h2 class="sbbutton" id="Accessory">Accessory Descriptions</h2>
	<h2 class="sbbutton" id="GT">General Tips</h2>
</div>
<div class="descbar">
</div>
<div class="exercises">
	<table class="exercises"></table>
</div>
<script>
function modHighlight(s) {
  $("div.sidebar h2").removeClass("highlight");
	$("div.descbar").hide();
	$("div.exercises").css("top","0px");
	$(this).addClass("highlight");
	$("table.exercises").html(s);
};
	$("h2#All").click(function () {
		modHighlight("<%= escape_javascript(render(Exercise.all)) %>")
	}); 
	$("h2#Glossary").click(function () {
		modHighlight("<%= escape_javascript(render(Glossary.all)) %>")
	}); 
	$("h2#Accessory").click(function () {
		modHighlight("<%= escape_javascript(render(OptionalAccessory.all)) %>")
	}); 
	$("h2#GT").click(function () {
		modHighlight("<%= escape_javascript(render(GeneralTip.all)) %>")
	}); 
	$(function() {
		$("h2#<%= @sel %>").click();
		if ("<%= @clickex %>" == "true") {
			$("#bu<%= @id %>").click();
		}
	}); 
</script>
