<div class="displaymedia">
	<div class="mainplayer">
		<% if exercise.videos.count > 0 %>
			<iframe class="youtube<%= exercise.videos.first.id %>" width="350" height="267" src="<%= exercise.videos.first.get_embed %>" frameborder="0" allowfullscreen></iframe>
			<%= image_tag exercise.exercise_pictures.first.get_site, :class => "picture" + exercise.exercise_pictures.first.id.to_s, :style =>"display:none" %><br />
		<% else %>
			<%= image_tag exercise.exercise_pictures.first.get_site, :class => "picture" + exercise.exercise_pictures.first.id.to_s %>
		<% end %>
	</div>
	Other media:<br />
	<div class="scroll">
		<% exercise.videos.each do |v| %>
			<%= image_tag v.get_image, :class => "video", :id => v.get_embed %>
		<% end %>
		<% exercise.exercise_pictures.each do |ep| %>
			<%= image_tag ep.get_site, :class => "picture" %>
		<% end %>
	</div>
</div>
<script>
	$("div.scroll img.picture").click(function () {
		$("div.displaymedia img.picture<%= exercise.exercise_pictures.first.id %>").attr("src",$(this).attr("src"))
		$("div.displaymedia img.picture<%= exercise.exercise_pictures.first.id %>").show();
		$("div.displaymedia iframe.youtube<%= exercise.videos.first.id %>").hide();
	}); 
	$("div.scroll img.video").click(function () {
		$("div.displaymedia iframe.youtube<%= exercise.videos.first.id %>").attr("src",$(this).attr("id"))
		$("div.displaymedia img.picture<%= exercise.exercise_pictures.first.id %>").hide();
		$("div.displaymedia iframe.youtube<%= exercise.videos.first.id %>").show();
	}); 
</script>


