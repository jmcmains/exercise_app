<tr>
	<td class="exercise <%= optional_accessory.id %>" id="<%= optional_accessory.id %>">
		<div class="expand" id="bu<%= optional_accessory.id %>">
			+
		</div>
		<div class="expand" id="bu<%= optional_accessory.id %>" style="display:none">
			-
		</div>
		<div class= "text">
			<%= optional_accessory.name %>
		</div>
		<script>
			$("td.<%= optional_accessory.id %>").click(function () {
			if ($("div#ex<%= optional_accessory.id %>").is(':visible')) {
				$("#ex<%= optional_accessory.id %>").hide('fast');
			} else {
				$("#ex<%= optional_accessory.id %>").show('fast');
			}
			$("div#bu<%= optional_accessory.id %>").toggle();
			}); 
		</script>
		<div class="data" id="ex<%= optional_accessory.id %>" style="display:none">
			<table class="allinfo">
				<tr>
					<td>
							<%= image_tag(optional_accessory.get_site, :height => "100") %>
					</td>
					<td>
						<%= optional_accessory.description %><br />
						For more information and purchasing details, please visit <a href="<%= optional_accessory.store_link %>">the store </a>
					</td>
				</tr>
			</table>

		</div>
	</td>
</tr>
