<div class="background"></div>
<div class="signin">
	<h1>Sign in</h1>
	<%= form_for(user, :remote => true ) do |f| %>
	  <%= render 'users/error_messages', :user => @user %>
		<div class="field">
		  <%= f.label :email %><br />
		  <%= f.text_field :email %>
		</div>
		<div class="field">
		  <%= f.label :password %><br />
		  <%= f.password_field :password %>
		</div>
		<div class="actions">
		  <%= f.submit "Sign in" %>
		</div>
	<% end %>
</div>
