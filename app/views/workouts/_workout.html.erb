<h2 class="sbbutton" id="wo<%= workout.id %>" title="<%= workout.name %>"><%= workout.name %></h2>
<script>
	$("h2#wo<%= workout.id %>").click(function () {
	$("table.exercises").html("<%= escape_javascript(render(workout.exercises)) %>");
	$("div.descbar").html("<%= escape_javascript(render('workouts/title', :workout => workout)) %>");
	$("div.sidebar h2").removeClass("highlight");
	$("h2#wo<%= workout.id %>").addClass("highlight");
	$("div.descbar").show();
	$("div.exercises").css("top","150px");
	}); 
</script>
